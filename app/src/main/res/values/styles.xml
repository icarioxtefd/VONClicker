<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/usuallygrey</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/usuallygrey</item>
    </style>

    <!-- Login theme -->
    <style name="LoginTheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/usuallygrey</item>

        <item name="android:statusBarColor">@color/usuallygrey</item>

        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>

        <item name="android:colorControlNormal">@color/usuallygrey</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>

        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/usuallyblack</item>
        <item name="android:textColorSecondary">@color/usuallygrey</item>

        <item name="android:windowBackground">@drawable/von_background_for_emails</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:textColorHint">@color/usuallyblack</item>
    </style>





    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

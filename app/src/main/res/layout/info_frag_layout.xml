<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModelFromGH"
            type="org.vono.luisdtefd.vonclicker.gameMain.GameHomeViewModel" />
    </data>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@{`Currency: ` + viewModelFromGH.currency.toString()}" />

                    <TextView
                        android:id="@+id/textViewTimesTapped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@{`Total taps: ` + viewModelFromGH.timesTapped.toString()}" />

                    <TextView
                        android:id="@+id/textViewTimesSavedByApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@{`Times the app saved your data: ` + viewModelFromGH.timesSavedByApp.toString()}" />

                    <TextView
                        android:id="@+id/textViewTimesSavedManually"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@{`Times you saved manually: ` + viewModelFromGH.timesSavedManually.toString()}" />

                    <TextView
                        android:id="@+id/textViewTapMultiplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@{`Current tap multiplier: ` + viewModelFromGH.tapMultiplier.toString()}" />


                </LinearLayout>



            </ScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:src="@drawable/common_full_open_on_phone"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="mini" />

        </FrameLayout>


</layout>